ARG sdk_vsn=0.13.29

FROM digitalasset/daml-sdk:${sdk_vsn}

WORKDIR /home/daml

COPY target/structured-products.dar /home/daml/

# Need the root user to set appropriate ownership of the DAR file.
USER root
RUN chown daml structured-products.dar
USER daml

EXPOSE 7600

CMD ~/.daml/bin/daml sandbox -- --port 7600 --scenario DA.RefApps.StructuredProducts.MarketSetup:marketSetup  structured-products.dar
